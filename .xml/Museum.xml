<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.
int n_max;      //  Maxximum number of people allowed in the museum
int count=0;      // Actual number of people in the museum

chan update;

bool open, close;</declaration>
	<template>
		<name x="5" y="5">East</name>
		<declaration>// Place local declarations here.</declaration>
		<location id="id0" x="0" y="34">
			<name x="-10" y="0">Enter</name>
		</location>
		<init ref="id0"/>
		<transition>
			<source ref="id0"/>
			<target ref="id0"/>
			<label kind="guard" x="85" y="-17">count&lt;n_max</label>
			<nail x="68" y="34"/>
			<nail x="68" y="0"/>
		</transition>
	</template>
	<template>
		<name>West</name>
		<location id="id1" x="0" y="34">
			<name x="-10" y="0">Exit</name>
		</location>
		<init ref="id1"/>
		<transition>
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="85" y="-8">count&gt;0</label>
			<nail x="68" y="34"/>
			<nail x="68" y="0"/>
		</transition>
	</template>
	<template>
		<name>Director</name>
		<location id="id2" x="0" y="0">
		</location>
		<init ref="id2"/>
		<transition>
			<source ref="id2"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="76" y="-34">update!</label>
			<nail x="68" y="0"/>
			<nail x="68" y="-34"/>
		</transition>
	</template>
	<template>
		<name>Control</name>
		<location id="id3" x="0" y="0">
		</location>
		<init ref="id3"/>
		<transition>
			<source ref="id3"/>
			<target ref="id3"/>
			<nail x="68" y="0"/>
			<nail x="68" y="-34"/>
		</transition>
	</template>
	<system>// Place template instantiations here.
Process = Template();
// List one or more processes to be composed into a system.
system Process;
    </system>
	<queries>
		<query>
			<formula></formula>
			<comment></comment>
		</query>
	</queries>
</nta>
